# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 119

[*.{html,md,ts,tsx,rst,scss,css}]
indent_style = tab

[*.html]
insert_final_newline = false

[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 100

[*.{html,scss,css}]
indent_size = 2
