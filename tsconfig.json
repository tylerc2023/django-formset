{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2019", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "incremental": true
  },
  "include": [
    "**/*.ts"
  ]
}
